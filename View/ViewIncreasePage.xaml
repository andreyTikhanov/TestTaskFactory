<Page x:Class="TTElecrtroshield.View.ViewIncreasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TTElecrtroshield.View"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="700"
      Title="ViewIncreasePage">

    <Grid>
        <StackPanel Background="White">
            <Label Margin="10 30 0 0" Style="{StaticResource Labels}"
                   Content="Список сотрудников на повышение зарплаты:"></Label>
            <ListBox Style="{StaticResource MylistBoxes}"
                     Width="680" Height="500"
                     Name="lbIncreaseList"></ListBox>
            <Button Click="btnBack_Click" Margin="0 20 0 0" Style="{StaticResource ButtonStyle}" Content="Назад"></Button>
        </StackPanel>
        
    </Grid>
</Page>
